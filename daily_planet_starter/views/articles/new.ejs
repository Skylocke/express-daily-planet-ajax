<h1>New Article</h1>

<form action="/articles" method="POST" role="form" class="post-form">
  <div class="form-group">
    <label for="title" class="hidden">Title</label>
    <input type="text" class="form-control" id="title" placeholder="Title" name="title">
  </div>

  <div class="form-group">
    <label for="body" class="hidden">Body</label>
    <textarea type="text" class="form-control" id="body" placeholder="Body" name="body"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button> <button class="btn btn-default" onclick="window.location.href='/articles'">Back Home <i-glyphicon class="glyphicon glyphicon-home"></i></button>
</form>

